pipeline{
agent any
tools {
  maven 'Maven3.9.6'
}
parameters {
  choice choices: ['development', 'master', 'qa', 'prod'], name: 'BranchName'
  string description: 'rajesh, satish, sagar, vamshi, joshi', name: 'Build started by'
}
stages{

  stage('CheckOutCode'){
    steps{
    git branch: "${params.BranchName}", credentialsId: '957b543e-6f77-4cef-9aec-82e9b0230975', url: 'https://github.com/devopstrainingblr/maven-web-application-1.git'
	
	}
  }
   stage('RunUnitTestCase&CreatePackage'){
   steps {
   parallel(
   RunTestCases: {
   sh "mvn test"
  },
CreatePackage: {
sh "mvn package"
}
)
}
}
}//stages closed
}//pipeline closed
